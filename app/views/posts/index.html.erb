 <div class ="container">
  <p id="notice"><%= notice %></p>
  <h1>Listing posts</h1>
  <table>
    <thead>
      <tr>
        <th class="table table-striped table-bordered table-hover">Title</th>
        <th class="table table-striped table-bordered table-hover">Description</th>
        <!-- <th class="table table-striped table-bordered table-hover">           </th> -->
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="table table-striped table-bordered table-hover"><%= post.title %></td>
          <td class="table table-striped table-bordered table-hover"><%= post.description %></td>

              <td class="btn-xs btn-default">
                  <a><%= link_to 'Show', post %></a> </td>
              <td class="btn-xs btn-default">
                  <a><%= link_to 'Edit', edit_post_path(post) %></a> </td>
              <td class="btn-xs btn-default">
                  <a><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></a> </td>

        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New post', new_post_path, class: "btn btn-default" %>

</div>
